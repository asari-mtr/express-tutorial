{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "prefer-arrow-callback": ["error", {"allowUnboundThis": false}],
        "no-console": "off",
        "no-undef": "off",
        "no-unused-vars": "off"
    }
}
